@page
@model AlbayaderWeb.Pages.ManageBranchModel
@{
    ViewData["Title"] = "Manage Company Branchs";
}
            <!-- Tempusdominus Bootstrap 4 -->
  <link rel="stylesheet" href="plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
<div class="content-wrapper">

  <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                  <li class="breadcrumb-item"><a href="Dashboard">Dashboard</a></li>
                  <li class="breadcrumb-item "><a href="Company">Companies</a></li>
                  <li class="breadcrumb-item "><a href="branchs?companyid=@Model.CompanyId&companyName=@Model.CompanyName">@Model.CompanyName Branches</a></li>
                  <li class="breadcrumb-item active" id="currentLable">@Model.pageTitle </li>
                </ol>
              </div>
          
            </div>
            
          </div>
          <!-- /.container-fluid -->
        </section>


        
 <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
               <div class="card card-default">
          <div class="card-header">
            <h3 class="card-title">Branch form</h3>

            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
              </button>
              
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <div class="row">
                <form id="BranchForm" method="post" style="width:90%;">
            @if(Model.editMode)
            {
                
                  <div class="col">
                   <div class="form-group">
                    <label for="companyname">Branch Name</label>
                    <input type="text" class="form-control" name="BranchName" id="BranchName" placeholder="Enter Company Name" value="@Model._branch.BranchName" />
                  </div>
                   <div class="form-group">
                    <label>Emirates</label>
                    <select name="ddEmirates" id="ddEmirates" class="form-control select2" style="width: 100%;">
                       <option value="">Select Emirates</option>
                       <option value="1">Abu Dhabi</option>
                       <option value="2">Dubai</option>
                       <option value="3">Sharjah</option>
                       <option value="4">Ajman</option>
                       <option value="5">Ras Al Khaimah</option>
                       <option value="6">Umm Alquwain</option>
                       <option value="7">Fujairah</option>
    
                    </select>
                  </div>
               
                  <div class="form-group">
                    <label for="lat">District</label>
                    <input type="text" class="form-control" name="District" id="District" placeholder="Enter District" value="@Model._branch.District"/>
                  </div>

                  <div class="form-group">
                    <label for="lat">Latitude</label>
                    <input type="text" class="form-control" name="latitude" id="latitude" placeholder="Enter Latitude" value="@Model._branch.Latitude"/>
                  </div>
                  <div class="form-group">
                    <label for="long">Longitude</label>
                    <input type="text" class="form-control" name="longitude" id="longitude" placeholder="Enter Longitude" value="@Model._branch.Longitude"/>
                  </div>
                 </div>
                     
                     <input type="hidden" id="hdBranchId" name="hdBranchId" value="@Model._branch.BranchId"/>
                     <input type="hidden" id="hdCompanyId" name="hdCompanyId" value="@Model._branch.CompnayId"/>
                   
                     @section Scripts{
                        <script type="text/javascript">
                        $(document).ready(function () {
                        $('.select2').select2();
                        $("#ddEmirates").val(@Model._branch.EmirateId).trigger('change');
      
                       
                        })
                         </script>
                       }

                        }
                        else
                        {
                            
                    <div class="col">
                   <div class="form-group">
                    <label for="companyname">Branch Name</label>
                    <input type="text" class="form-control" name="BranchName" id="BranchName" placeholder="Enter Branch Name" value="" />
                  </div>
                   <div class="form-group">
                    <label>Emirates</label>
                    <select name="ddEmirates" id="ddEmirates" class="form-control select2" style="width: 100%;">
                       <option value="">Select Emirates</option>
                       <option value="1">Abu Dhabi</option>
                       <option value="2">Dubai</option>
                       <option value="3">Sharjah</option>
                       <option value="4">Ajman</option>
                       <option value="5">Ras Al Khaimah</option>
                       <option value="6">Umm Alquwain</option>
                       <option value="7">Fujairah</option>
    
                    </select>
                  </div>
               
                  <div class="form-group">
                    <label for="lat">District</label>
                    <input type="text" class="form-control" name="District" id="District" placeholder="Enter District" value=""/>
                  </div>

                
                  <div class="form-group">
                    <label for="lat">Latitude</label>
                    <input type="text" class="form-control" name="latitude" id="latitude" placeholder="Enter Latitude" value=""/>
                  </div>
                  <div class="form-group">
                    <label for="long">Longitude</label>
                    <input type="text" class="form-control" name="longitude" id="longitude" placeholder="Enter Longitude" value=""/>
                  </div>
          

                      <span id="uploadError" class="errorMessage" ></span>
                   
                     </div>
                      
                  <input type="hidden" id="hdCompanyId" name="hdCompanyId" value="@Model.CompanyId"/>

                      }

                 <input type="hidden" id="companyNamefield" name="companyNamefield" value="@Model.CompanyName"/>
                 <input type="hidden" id="Smode" name="Smode" value="@Model.PageActionMode"/>

                     </form>
               
            
                      

          
                
         </div>

            
 
            <!-- /.row -->
        <div class="dropdown-divider" ></div>
            
            <div class="row" style="float: right;"> 
                  <div class="col">
              <div style="padding: 20px;float:left">
            <a href='branchs?companyid=@Model.CompanyId&companyName=@Model.CompanyName' class="btn btn-block btn-default btn-lg" style="width: 200px;">Cancel</a>

             </div>

           <div style="padding: 20px;float:left">
            <button type="button" id="SaveBranch" class="btn btn-block btn-info btn-lg" style="width: 200px;">Save</button>

             </div>
             </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.card-body -->
         
        </div>
        <!-- /.card -->


           </div>
        </section>
        <!-- /.content -->

        </div>


           <!-- jQuery -->
            <script src="plugins/jquery/jquery.min.js"></script>
            <!-- Bootstrap 4 -->
            <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- Tempusdominus Bootstrap 4 -->
            <!-- Select2 -->
            <script src="plugins/select2/js/select2.full.min.js"></script>
          <!-- InputMask -->
        <script src="plugins/moment/moment.min.js"></script>
        <script src="plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
        <!-- date-range-picker -->

        
            <script src="~/js/branch/ManageBranch.js?dt=@DateTime.Now.ToString("yyyyMMddhhmmss")"></script>


            <script src="plugins/jquery-validation/jquery.validate.min.js"></script>
            <script src="plugins/jquery-validation/additional-methods.min.js"></script>


           
