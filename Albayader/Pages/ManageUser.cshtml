                      <div class="form-group">
                    <label>Branch</label>
                    <select name="ddBranch" id="ddBranch" class="form-control select2" style="width: 100%;">
                 
    
                    </select>
                  </div>

                    <div class="form-group">
                    <label>Title</label>
                    <select name="ddTitle" id="ddTitle" class="form-control " style="width: 100%;">
