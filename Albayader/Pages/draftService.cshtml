@page
@model AlbayaderWeb.Pages.draftServiceModel
@{
    ViewData["Title"] = "Drafted Services";
}

<!-- daterange picker -->
  <link rel="stylesheet" href="plugins/daterangepicker/daterangepicker.css">
<!-- Tempusdominus Bootstrap 4 -->
<link rel="stylesheet" href="plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">

<!-- DataTables -->
<link rel="stylesheet" href="plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">


<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Draft Services</li>
                    </ol>
                </div>

            </div>



        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="container-fluid">


            <div class="card card-default">

                <!-- /.card-header -->
                <div class="card-body">



                    <div class="col-md-12">

                        <form id="FilterDate">

                      

                        <div class="row">

                            <div class="col">
                                <div class="form-group">
                                    <select class="form-control select2" style="width: 100%;" id="ddServiceType">
                                         <option selected="selected" value="">All Type</option>
                                        <option value="1">Preventive</option>
                                        <option value="2">Corrective</option>
                                        <option value="3">Other</option>

                                    </select>
                                </div>

                            </div>
                              <div class="col">
                                <div class="form-group">
                                    <select class="form-control select2" style="width: 100%;" id="ddBranch">
                                        <option selected="selected">All Branches</option>
                                        

                                    </select>
                                </div>

                            </div>

                        </div>
                          </form>


                        <div class="dropdown-divider"></div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col">

                                    <div class="card-body">
                                        <table id="DrasftTbl" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Ref.</th>
                                                    <th>Branch</th>
                                                    <th>Type</th>
                                                    <th>Creation Date</th>
                                                    <th>Technicain</th>

                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @if (Model._services != null)
                                                {
                                                   
                                                         @foreach (var item in Model._services)
                                                    {


                                                        <tr>
                                                            <td>#@Html.DisplayFor(modelItem => item.ServiceId)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.BranchName)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.ServiceTypeName)</td>
                                                             <td> @item.CreatedDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                                                            <td>@Html.DisplayFor(modelItem => item.TechnicianName)</td>
                                                        @if(@item.ServiceTypeId==1){
                                                            <td><a href="preventive?ServiceId=@item.ServiceId">View</a></td>

                                                        }else{
                                                            <td><a href="corrective?ServiceId=@item.ServiceId">View</a></td>

                                                        }
                                                        </tr>
                                                    }
                                                    
                                                   
                                                }
                                                </tfoot>
                                        </table>
                                    </div>


                                </div>

                            </div>

                        </div>




                        <!-- /.row -->
                    </div>
                    <!-- /.card-body -->

                </div>
                <!-- /.card -->


            </div>



            <!-- /.card-body -->
        </div>







        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->

    <input type="hidden" id="APIURI" name="APIURI" value="@Model.apiurl" />
</div>


