@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
     Layout = "~/Pages/Shared/_PlanLayout.cshtml";

}


   


<!-- jQuery -->
<script src="plugins/jquery/jquery.min.js"></script>



<div class="hold-transition login-page">


<div class="login-box">
  <div class="login-logo">
    <img src="images/logo-albyader.png" style="width: 60%" />
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to Al Bayader Service</p>

      <form method="post" id="loginForm">
           <div class="form-group">
        <div class="input-group ">
          
           <input type="email" name="LoginEmailName" class="form-control" id="LoginEmail" placeholder="Enter email" value="@Model.email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          </div>
        </div>
         <div class="form-group">
        <div class="input-group ">
              
           <input type="password" name="LoginPasswordName" class="form-control" id="exampleInputPassword1" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="remember">
              <label for="remember">
                Remember Me
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="button" class="btn btn-info btn-block" id="lognBtn">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

     
      <!-- /.social-auth-links -->

      <p class="mb-1">
        <a href="forgot-password.html">I forgot my password</a>

      </p>
     
     <p>
@* <p>@Model.email</p>
 <p>@Model.password</p>*@
  <span class="errorMessage">@Model.Message</span>
 </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
</div>
<!-- /.login-box -->


<script src="js/login.js" ></script>
