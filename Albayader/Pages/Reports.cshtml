@page
@model AlbayaderWeb.Pages.ReportsModel
@{
    ViewData["Title"] = "Reports";
}

<!-- daterange picker -->
  <link rel="stylesheet" href="plugins/daterangepicker/daterangepicker.css">
<!-- Tempusdominus Bootstrap 4 -->
<link rel="stylesheet" href="plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">

<!-- DataTables -->
<link rel="stylesheet" href="plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">


<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Report</li>
                    </ol>
                </div>

            </div>



        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="container-fluid">


            <div class="card card-default">

                <!-- /.card-header -->
                <div class="card-body">



                    <div class="col-md-12">

                        <form id="FilterDate">

                      

                        <div class="row">

                            <div class="col">
                                <div class="form-group">
                                 
                                     <div class="input-group date" id="startDateHolder" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input" data-target="#startDate" id="startDate" name="startDate" placeholder="Select Start Date"/>
                                        <div class="input-group-append" data-target="#startDate" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>

                                </div>

                              

                            </div>
                            <div class="col">
                                <div class="form-group">
                                 
                                     <div class="input-group date" id="EndDateHolder" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input" data-target="#EndtDate" id="EndtDate" name="EndtDate" placeholder="Select End Date"/>
                                        <div class="input-group-append" data-target="#EndtDate" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>

                                </div>

                              

                            </div>
                           <div class="col">
                                <div style="float:left;padding-right:10px;">
                                    <button type="button" class="btn btn-block btn-info"  id="DateSearch">Apply</button>

                                </div>
                       
                              <div style="float:left;">
                                    <button type="button" class="btn btn-block btn-default"  id="DateReset">Reset</button>

                                </div>
                            </div>
                          
                         <div class="col">
                                <div class="form-group">
                                    <select class="form-control select2" style="width: 100%;" id="ddServiceType">
                                      <option selected="selected" value="">All Type</option>
                                        <option value="1">Preventive</option>
                                        <option value="2">Corrective</option>
                                        <option value="3">Other</option>

                                    </select>
                                </div>

                            </div>
                            <div class="col">
                                <div class="form-group">
                                     <select name="ddVistType" id="ddVistType" class="form-control select2" style="width: 100%;">
                                    <option value="">All Site Vist</option>
                                    <option value="1">Planned</option>
                                    <option value="2">Warranty</option>
                                    <option value="3">Repairing</option>
                                    <option value="4 and Startup">Commissioning and Startup</option>
                                    <option value="5">Installation</option>
                                    <option value="6">AMC</option>
                                    <option value="7">Emergency</option>


                                </select>
                                </div>

                            </div>
                              <div class="col">
                                <div class="form-group">
                                    <select class="form-control select2" style="width: 100%;" id="ddBranch">
                                        <option selected="selected">All Branches</option>
                                        

                                    </select>
                                </div>

                            </div>

                        </div>
                          </form>


                        <div class="dropdown-divider"></div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col">

                                    <div class="card-body">
                                        <table id="DrasftTbl" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Ref.</th>
                                                    <th>Branch</th>
                                                     <th>Type</th>
                                                    <th>Creation Date</th>
                                                    <th>Site Vist</th>
                                                    <th>Technicain</th>
                                                     <th>Completion Date </th>
                                                      <th>Remarkers *  </th>
                                                      <th>Supervisor  Feedback</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @if (Model._services != null)
                                                {
                                                  
                                                         @foreach (var item in Model._services)
                                                    {


                                                        <tr>
                                                            
                                                                 @if(@item.ServiceTypeId==1){
                                                                    <td><a href="PreventiveView?ServiceId=@item.ServiceId">#@Html.DisplayFor(modelItem => item.ServiceId)</a></td>
                                                                }
                                                                else
                                                                {
                                                                    <td><a href="correctiveView?ServiceId=@item.ServiceId">#@Html.DisplayFor(modelItem => item.ServiceId)</a></td>
                                                                    
                                                                }
                                                            
                                                            <td>@Html.DisplayFor(modelItem => item.BranchName)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.ServiceTypeName)</td>
                                                            <td> @item.CreatedDate.ToString("dd/MM/yyyy hh:mm")</td>
                                                            <td>@Html.DisplayFor(modelItem => item.VistTypeName)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.TechnicianName)</td>
                                                            <td>@item.CompletionDate.ToString("dd/MM/yyyy hh:mm")</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Remark)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.SupervisourFeedback)</td>
                                                        
                                                           
                                                           
                                                           <td>

                                                                    <div class="dropdown">
                                                                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                                                        Action
                                                                      </button>
                                                                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                                                       
                                                                             

                                                                      <li class="adddCommentlnk" serviceid="@item.ServiceId"><a  class="dropdown-item " href="#"  data-toggle="modal" data-target="#modal-Add">Add Comment</a></li>
                                                                           
                                                                    
                                                                          <li class="viewComment" serviceid="@item.ServiceId"><a  class="dropdown-item " href="#"  data-toggle="modal" data-target="#modal-view">View Comments</a></li>

                                                                          <li>

                                                                               @if(@item.ServiceTypeId==1){

                                                                                    <a class="dropdown-item" href="PreventiveView?ServiceId=@item.ServiceId">View Details</a>

                                                                                }
                                                                                else
                                                                                {

                                                                                   <a class="dropdown-item" href="correctiveView?ServiceId=@item.ServiceId">View Details</a>
                                                                    
                                                                                }


                                                                          </li>
                                               
                                                                      </ul>
                                                                    </div>
                                                          </td>

                                                           

                                                        </tr>
                                                    }
                                               
                                                   
                                                }
                                                </tfoot>
                                        </table>
                                    </div>


                                </div>

                            </div>

                        </div>




                        <!-- /.row -->
                    </div>
                    <!-- /.card-body -->

                </div>
                <!-- /.card -->


            </div>



            <!-- /.card-body -->
        </div>



  <!-- /.modal -->
        <div class="modal fade" id="modal-Add">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Add Comment</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
          <form id="Comments">

               <div class="col-md-12">
                <div class="form-group">
                  <label for="exampleInputEmail1">Comment on # <span id="servicetextId"></span></label>
                  <textarea class="form-control" id="serviceComment" name="serviceComment" rows="3" maxlength="250" required></textarea>
                </div>
              </div>
          </form>

                
            </div>
           
              <div class="modal-footer justify-content-between">
              <button Commentserviceid="" id="addComment" type="button" class="btn btn-info" >add</button>
              <button type="button" class="btn btn-default" data-dismiss="modal" id="closeaddCom">Close</button>
 
            </div>
    
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>


        <div class="modal fade" id="modal-view">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">View Comment</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
            <div >
                <div class="col-md-12">
                <div class="card-footer card-comments" id="commentList">
              
      
               
              </div>

              </div>


            </div>

                
            </div>
           
              <div class="modal-footer justify-content-between">

              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
             
            </div>
    
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>



        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->

    <input type="hidden" id="APIURI" name="APIURI" value="@Model.apiurl" />
</div>


