@page
@model AlbayaderWeb.Pages.editpreventiveModel
@{
      ViewData["Title"] = "Edit Preventive Service";
}



  <style>
    .dropdown-menu {
      padding-top: 0;

    }

    .dropdown-divider {
      margin: 0;
    }



    .btn-addEquipment {
    color: #fff;
    background-color: #8d30ff;
    border-color: #ae45ff;
    box-shadow: none;
}

