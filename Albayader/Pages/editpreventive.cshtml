<div class="content-wrapper">
<section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-left">
                                <li class="breadcrumb-item"><a href="Dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item active">Edit Peventive Service</li>
                            </ol>
                        </div>

                    </div>



                </div>
                <!-- /.container-fluid -->
            </section>

              <!-- Main content -->

              <section class="content">

        <div class="container-fluid">
          <div class="card">

            <div class="card-body">
              <div class="row">



                <div class="col-sm">

                  <div class="info-box-content">
                    <div class="user-block">
                      <img class="img-circle img-bordered-sm" src="@Model.uploadurl@Model._service.PictureFileName" alt="user image">
                      <span class="username">
                        <a href="#">@Model._service.TechnicianName</a>
                      </span>
                      <span class="description">Technician</span>
                    </div>

                  </div>
                </div>
                <div class="col-sm">

                  <div class="info-box-content">
                    <div class="info-box-text text-center text-muted"><b>@Model._service.CompanyName - @Model._service.BranchName</b></div>
                    <div class="info-box-number text-center text-muted mb-0"> <span class="RefNum"> Ref:#@Model._service.ServiceId</span></div>
                  </div>

                </div>
                <div class="col-sm">

                  <div class="info-box-content" style="float: right;text-align: left;">
                    <div class="info-box-text text-center text-muted"><i class="fa-solid fa-calendar-days"></i>
                                    @Model._service.CreatedDate.ToString("dd/MM/yyyy")
                       </div>
                    <div class="info-box-number text-muted mb-0"><i class="fa-solid fa-clock"></i> @Model._service.CreatedDate.ToString("hh:mm tt")</div>
                  </div>

                </div>

              </div>

            </div>

          </div>

          <!--Equipment 1-->

         <form method="post" id="ServiceForm">

         <div id="mainEquHolder">



                        <div class="card card-default" id="Equipment1" EquId="1">
                            <div class="card-header">
                                <h3 class="card-title">Equipment Details </h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool removeForm"  EquId="1" >
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="row" >

                                    <div class="col-md-6">
                                        <div class="form-group">
                                         <label>Equipment</label>
                                         <div id="EquipmentsHolder">
                                              <select name="Equipments1" id="Equipments1" class="form-control select2 ddEquipment" style="width: 100%;" required >



                                            </select>
                                         </div>



                                        </div>
                                    </div>



                                    <!-- /.col -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="exampleInputEmail">Serial No.</label>
                                            <input type="text" class="form-control serialCss" id="Serial1" name="Serial1" maxlength="30"
                                                placeholder="Enter Serial No.">
                                        </div>

                                    </div>


                                    <div class="col-md-12">
                                        <div class="form-group col-md-12">
                                            <label for="exampleInputFile">Before </label>
                                            <div class="input-group " id="uploadBeforeHolder">   

                                                <input id="PicturesBeforeFix1" name="PicturesBeforeFix1" class="file fa-2x fileImage " type="file" multiple="true" style="height:50px;"  EquId="1" pictureType="1">



                                                  <div class="fielUploadValidationHolder">
                                                    <span id="uploadError" class="errorMessage uploadError"></span>
                                                    <progress id="fileProgress" style="display: none" class="progress"></progress>
                                                    <span id="lblMessage" class="uploadSccessMessage lblMessage"></span>
                                                    <div id="thumbHolder" class="thumbHolder"></div>
                                                 </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <fieldset class="form-group border p-3" id="partsHolder1">
                                            <legend class="w-auto px-2">Parts</legend>

                                            <div class="row">
                                                <div class="col-lg col-md-2">
                                                    <input type="checkbox"  data-toggle="toggle"  data-width="75" data-height="50"  id="Elect1" name="Elect1" data-on="Yes" data-off="No" >
                                                     <label class="partslable" for="Elect1">Elect Parts</label>
                                                </div>
                                                <div class=" col-lg col-md-2">
                                                     <input type="checkbox"  data-toggle="toggle" data-width="75" data-height="50"  id="Moving1" name="Moving1"  data-on="Yes" data-off="No" >
                                                      <label class="partslable" for="Moving1">Moving Parts</label>
                                                </div>
                                            <div class=" col-lg col-md-2">

                                                     <input type="checkbox"  data-toggle="toggle"  data-width="75" data-height="50"   id="Bearings1" name="Bearings1"  data-on="Yes" data-off="No" >
                                                      <label class="partslable" for="Bearings1">Bearings</label>

                                                </div>
                                            <div class=" col-lg col-md-2">
                                                     <input type="checkbox"  data-toggle="toggle" data-width="75" data-height="50"  id="Bells1" name="Bells1"  data-on="Yes" data-off="No" >
                                                      <label class="partslable" for="Bells1">Belts</label>
                                                </div>
                                            <div class=" col-lg col-md-2">
                                                       <input type="checkbox"  data-toggle="toggle"  data-width="75" data-height="50"  id="Motor1" name="Motor1"  data-on="Yes" data-off="No" >
                                                        <label class="partslable" for="Motor1">Motor</label>
                                                </div>

                                            <div class=" col-lg col-md-2">
                                                         <input type="checkbox"  data-toggle="toggle"  data-width="75" data-height="50"   id="Heater1" name="Heater1"  data-on="Yes" data-off="No" >
                                                        <label class="partslable" for="Heater1">Heater</label>
                                                </div>
                                                <div class=" col-lg col-md-2">
                                                         <input type="checkbox"  data-toggle="toggle"  data-width="75" data-height="50"   id="Safety1" name="Safety1"  data-on="Yes" data-off="No" >
                                                        <label class="partslable" for="Safety1">Safety Switch</label>
                                                </div>
                                            <div class=" col-lg col-md-2">
                                                         <input type="checkbox"  data-toggle="toggle"  data-width="75" data-height="50"   id="Control1" name="Control1"  data-on="Yes" data-off="No" >
                                                        <label class="partslable" for="Control1">Control Board</label>
                                                </div>
                                            <div class=" col-lg col-md-2">
                                                         <input type="checkbox"  data-toggle="toggle"  data-width="75" data-height="50"   id="Compressor1" name="Compressor1"  data-on="Yes" data-off="No" >
                                                        <label class="partslable" for="Compressor1">Compressor</label>                                                </div>
                                            <div class=" col-lg col-md-2">
                                                         <input type="checkbox"  data-toggle="toggle"  data-width="75" data-height="50"   id="Tmp1" name="Tmp1"  data-on="Yes" data-off="No" >
                                                        <label class="partslable" for="Tmp1">Tmp. Control</label>
                                                </div>
                                            </div>


                                        </fieldset>

                                    </div>

                                    <div class="row">

                                    <div class="col-md-6">
                                        <div class="form-group">
                                         <label>Materials Used</label>
                                              <select name="MaterialUsed1" id="MaterialUsed1" class="form-control select2" style="width: 100%;" multiple >

                                            </select>
                                         </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                         <label>Required Materials</label>
                                              <select name="Rquiredmaterials1" id="Rquiredmaterials1" class="form-control select2" style="width: 100%;" multiple >

                                            </select>
                                         </div>
                                    </div>

                                        <div class="col-md-12">
                                            <div class="form-group col-md-12">
                                                <label for="exampleInputFile">After </label>
                                                <div class="input-group " id="uploadAftereHolder">   

                                                    <input id="PicturesAfterFix1" name="PicturesAfterFix1" class="file fa-2x fileImage " type="file" multiple="true" style="height:50px;"  EquId="1"  pictureType="2">

                                                   <div class="fielUploadValidationHolder">
                                                    <span id="uploadError" class="errorMessage uploadError"></span>
                                                    <progress id="fileProgress" style="display: none" class="progress"></progress>
                                                    <span id="lblMessage" class="uploadSccessMessage lblMessage"></span>
                                                    <div id="thumbHolder" class="thumbHolder"></div>
                                                 </div>
                                                </div>
                                            </div>
                                        </div>



                                    </div>
                                    <!-- /.row -->


                                    <!-- /.row -->
                                </div>
                                <!-- /.card-body -->

                            </div>
                            <!-- /.card -->

                            <input type="hidden" id="ServiceDetailsid1" name="ServiceDetailsid1"value=""/>
                        </div>
                   </div>

        <div class="card">

          <div class="card-body">


            <div class="row">
             <div class="col-md-12">
                        <div class="form-group">
                            <label>Status After Service</label>
                            <div id="EquipmentsHolder">
                                <select name="ddStatusAfter" id="ddStatusAfter" class="form-control select2 ddEquipment" style="width: 100%;"   >
                                         <option value="">Please Select Status</option>
                                         <option value="1">Complete</option>
                                         <option value="2">Incomplete</option>
                                         <option value="3">Pending for Spare</option>
                                         <option value="4">Under Observation</option>

                            </select>
                            </div>



                        </div>
                    </div>

              <div class="col-md-12">
                <div class="form-group">
                  <label for="exampleInputEmail1">Remarks</label>
                  <textarea class="form-control" id="serviceRemark" name="serviceRemark" rows="3" maxlength="2500"></textarea>
                </div>
              </div>

            </div>
          </div>
        </div>
            </form>
      <div class="card">

        <div class="card-body">

          <div class="row">
            <div class="col">
            <button type="button" class="btn btn-block btn-addEquipment btn-lg" id="AddAnotherForm" >

            <i class="fas fa-plus"></i> Add Another Equipment</button>

            </div>
            <div class="col">
              <button type="button" id="SaveDraft" class="btn btn-block btn-info btn-lg" >

              <i class="fa-solid fa-pen-nib"></i> Update</button>
            </div>
            <div class="col">
            <a  class="btn btn-block btn-default btn-lg" href="Reports"  >
              <i class="fa-solid fa-arrow-right"></i>
             Cancel</a>
            </div>

          </div>
        </div>
      </div>

          <!-- /.card-body -->
        </div>

        </section>
        <input type="hidden" id="APIURI" name="APIURI" value="@Model.apiurl"/>
        <input type="hidden" id="Uploadlocation" name="Uploadlocation" value="@Model.uploadurl"/>
        <input type="hidden" id="serviceid" name="serviceid" value="@Model._service.ServiceId"/>
        </div>




      <div class="modal fade" id="modal-delete">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Delete Confirmation</h4>
