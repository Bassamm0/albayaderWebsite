@page
@model AlbayaderWeb.Pages.recoverpasswprdModel
@{
       ViewData["Title"] = "Recover Password";
     Layout = "~/Pages/Shared/_PlanLayout.cshtml";
}




<div class="hold-transition login-page">


<div class="login-box">
  <div class="login-logo">
    <img src="images/logo-albyader.png" style="width: 60%" />
  </div>
  

   <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">

        @if(@Model.tokenStatus)
        {
              <p class="login-box-msg">You are only one step a way from your new password, recover your password now.</p>

      <form  method="post" id="recoverPasswordForm" itemid=recoverPasswordForm>
          <div class="input-group mb-3" id="passwordHolder">
              <input type="password" class="form-control" placeholder="Password" name="password" id="password">
              <div class="input-group-append">
                  <div class="input-group-text">
                      <span class="fas fa-lock"></span>
                  </div>
              </div>
          </div>
          <div class="input-group mb-3" >
              <input type="password" class="form-control" placeholder="Confirm Password" name="passwordconf" id="passwordconf">
              <div class="input-group-append">
                  <div class="input-group-text">
                      <span class="fas fa-lock"></span>
                  </div>
              </div>
          </div>
             <div id="pswd_info" class="pswd_infoCss">
                <h4>Password requirements:</h4>
                <ul>
                    <li id="letter" class="invalid">At least <strong>one letter</strong></li>
                    <li id="capital" class="invalid">At least <strong>one capital letter</strong></li>
                    <li id="number" class="invalid">At least <strong>one number</strong></li>
                    <li id="length" class="invalid">Be at least <strong>8 characters</strong></li>
                    <li id="Symbol" class="invalid">Be at least one <strong>Symbol (~!#$%^&^&)</strong></li>
                </ul>
              </div>
          <div class="row">
              <div class="col-12">
                  <button type="button" class="btn btn-info btn-block" id="recover" name="recover">Change password</button>
              </div>
              <!-- /.col -->
          </div>
          
      </form>


                }
                else
                {
           <div class="row">

              <div class="col-12">
                  <a href="forgetpassword">Forget Password</a>
                 
              </div>
          </div>

                }
     
            <div class="row" >
            <div class="col-12">
            <span class="errorMessage" id="errorMes">@Model.errorMessage</span>
            <span class="successMessage">@Model.successMessage</span>
            </div>
        </div>
      <p class="mt-3 mb-1">
        <a href="Index">Login</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>

</div>
</div>
<!-- /.login-box -->

